  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Insight Graphs"
  },
  "description": {
    "en": "Adds support to generate graphs for insights as image"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "small": "/assets/images/small.jpg",
    "large": "/assets/images/large.jpg",
    "xlarge": "/assets/images/xlarge.jpg"
  },
  "author": {
    "name": "Menno van Hout",
    "email": "menno.vanhout@gmail.com"
  },
